{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        // ...
        "lit"
      ],
    "rules": {
        "no-irregular-whitespace" : 1,
        "no-var":1,
        "indent": ["error", 4],
        "handle-callback-err":"off",
        "no-new" : "off"

    }
}